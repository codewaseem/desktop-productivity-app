{
  "name": "desktop-productivity-app",
  "version": "0.0.1",
  "description": "A desktop productivity tracking app.",
  "main": "dist/index.js",
  "author": "codewaseem@gmail.com <Waseem Ahmed>",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && node dist/index.js",
    "run-ts-script": "tsnd --respawn ",
    "build": "yarn tsc",
    "dev": "yarn run-ts-script src/index.ts",
    "test": "yarn jest",
    "test:watch": "yarn jest --watch",
    "eslint:fix": "eslint --cache --fix",
    "format:fix": "prettier --write"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": ">=4",
    "jest": "^26.4.0",
    "lint-staged": ">=10",
    "prettier": "2.0.5",
    "ts-jest": "^26.2.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": [
      "yarn eslint:fix",
      "yarn format:fix"
    ]
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  }
}